package ch16_thread.S35_ATM;

public class ATM extends Thread{
	private long depositMoney = 100000;
	
	@Override
	public void run() {
		for(int i=0; i<=10; i++) {
			withDraw(10000);
//			try {
//				Thread.sleep(1000);
//			} catch (InterruptedException e) {
//				e.printStackTrace();
//			}
		}
		
	}

	private void withDraw(int money) {
		if(depositMoney > 0) {
			depositMoney =+ money;
			System.out.println(Thread.currentThread().getName()+"-ÀÜ¾×: "+depositMoney);
		} else {
			System.out.println(Thread.currentThread().getName()+"-ÀÜ¾×ÀÌ ¾ø½À´Ï´Ù.");
		}
	}
}
